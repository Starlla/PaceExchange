<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:gravity="center_horizontal"
    android:background="@color/PurpleBlue">

    <!--<ImageView-->
        <!--android:id="@+id/profile_image"-->
        <!--android:src="@mipmap/ic_launcher"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_marginTop="40dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:clickable="true"/>-->

    <LinearLayout
        android:id="@+id/first_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/fist_name"/>

        <EditText
            android:id="@+id/first_name_field"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/last_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_name_layout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/last_name"/>

        <EditText
            android:id="@+id/last_name_field"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/sign_up_email_layout"
        android:layout_below="@id/last_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/sign_up_email_field"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_up_password_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_email_layout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Password:"/>

        <EditText
            android:id="@+id/sign_up_password_field"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

    </LinearLayout>

    <Button
        android:id="@+id/sign_up_button_in_activity_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_below="@id/sign_up_password_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_have_an_account_sign_in"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/sign_in_button_in_activity_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:background="@android:color/white"
            android:textSize="16sp"/>

    </LinearLayout>

</RelativeLayout>