<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:gravity="center_horizontal"
    android:background="@color/PurpleBlue">

    <!--<ImageView-->
        <!--android:id="@+id/profile_image"-->
        <!--android:src="@mipmap/ic_launcher"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_marginTop="40dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:clickable="true"-->
        <!--android:layout_alignParentBottom="true"/>-->
    <TextView
        android:id="@+id/sign_up_create_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/White"/>

    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/sign_up_first_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_first_name"
        android:textColorHint="@color/White"
        android:textColor="@color/White"
        android:layout_below="@+id/sign_up_create_account_text"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/et_ui"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:textSize="14dp"
        android:paddingBottom="15dp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/sign_up_last_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_last_name"
        android:textColorHint="@color/White"
        android:textColor="@color/White"
        android:layout_below="@+id/sign_up_first_name_field"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/et_ui"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:textSize="14dp"
        android:paddingBottom="15dp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/sign_up_email_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_pace_email"
        android:textColorHint="@color/White"
        android:textColor="@color/White"
        android:layout_below="@+id/sign_up_last_name_field"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/et_ui"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:textSize="14dp"
        android:paddingBottom="15dp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/sign_up_password_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/hint_password"
        android:textColorHint="@color/White"
        android:textColor="@color/White"
        android:layout_below="@+id/sign_up_email_field"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/et_ui"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:textSize="14dp"
        android:paddingBottom="15dp"/>

    <Button
        android:id="@+id/sign_up_button_in_activity_sign_up"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/button_sign_up"
        android:layout_below="@id/sign_up_password_field"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="50dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/sign_in_bt_ui"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_have_an_account_sign_in"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/sign_in_button_in_activity_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/button_sign_in"
            android:textColor="@color/White"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>